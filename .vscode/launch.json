{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug opened mocha tests file",
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--compilers",
                "ts:ts-node/register",
                "--no-timeouts",
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
        }
    ]
}